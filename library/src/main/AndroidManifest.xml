<manifest xmlns:android="http://schemas.android.com/apk/res/android" package="com.cocomeng.library">
    xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="true"
        android:supportsRtl="true"
        android:largeHeap="true"
        >

        <activity
            android:name=".PhotoSelectActivity"
            android:configChanges="orientation|keyboard|keyboardHidden|screenSize"
            android:screenOrientation="portrait" />
        <activity
            android:name=".PhotoEditActivity"
            android:configChanges="orientation|keyboard|keyboardHidden|screenSize"
            android:screenOrientation="portrait" />
        <activity
            android:name=".PhotoPreviewActivity"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboard|keyboardHidden|screenSize"
            />
        <meta-data
            android:name="com.cocomeng.library.model.MyGlideModule"
            android:value="GlideModule" />
    </application>

</manifest>